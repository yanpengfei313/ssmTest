<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fei.dao.AccountDao">
    <update id="updateAccount">
        update account set money = money + #{money} where username=#{name}
    </update>
</mapper>